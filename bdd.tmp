ALTER TABLE question
ADD COLUMN multi_res boolean NOT NULL;

CREATE VIEW public.v_question_non_replied AS
 SELECT id_question,
    intitule,multi_res
   FROM (public.question
     JOIN public.reponse_client ON ((id_question = reponse_client.id_question)))
  WHERE (NOT (id_question IN ( SELECT reponse_client_1.id_question
           FROM public.reponse_client reponse_client_1)));

